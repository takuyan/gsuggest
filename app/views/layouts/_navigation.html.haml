%nav.navbar.navbar-default.navbar-fixed-top{role: :navigation}
  .container
    .navbar-header
      %button.navbar-toggle{type: :button, data: {toggle: "collapse", target: ".bs-navbar-collapse"}}
        %span.sr-only Toggle navigation
        %span.fa.fa-th-large
      %a.navbar-brand{href: '/'}
        Gsuggest

    .collapse.navbar-collapse.bs-navbar-collapse{role: :navigation}
      = form_tag q_path, method: :get, class: 'navbar-form navbar-right' do
        .form-group
          = text_field_tag :q, '', placeholder: @q, class: 'form-control'
          = submit_tag 'Search', class: 'btn btn-primary', data: {disable_with: 'Sending...'}
